{
  "name": "@hasu/ui",
  "version": "1.0.0",
  "description": "Frontend React app for Hasu no Sora music player",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production tsc && vite build --mode production",
    "build:analyze": "NODE_ENV=production vite build --mode production --analyze",
    "preview": "vite preview",
    "preview:prod": "vite preview --host 0.0.0.0 --port 3000",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test:build": "tsc && echo 'âœ… TypeScript compilation successful'"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.6.0",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "vite": "^7.0.0"
  }
}
