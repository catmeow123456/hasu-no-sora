{
  "name": "@hasu/server",
  "version": "1.0.0",
  "description": "Backend server for Hasu no Sora music player",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --build --verbose",
    "build:prod": "NODE_ENV=production tsc --build --verbose",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production PORT=8080 node --max-old-space-size=512 dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test:start": "node --check dist/index.js && echo 'âœ… Server bundle valid'"
  },
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "11.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^24.0.3",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0"
  }
}
